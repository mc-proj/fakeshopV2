{% extends 'base.html.twig' %}

{% block title %}Boutique - Fake Shop V2{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/produits/index.style.css') }}">
{% endblock %}

{% block body %}
<div class="container-fluid">

    <div id="chemin">
        <a href="{{ path('accueil') }}">Accueil</a> >> Boutique
    </div>

    <div class="row">
        {% for categorie in categories %}
            {% if categorie.getSousCategories()|length == 0 %}
                <div class="col-md-3 col-6 case-categorie">
                    <a href="{{ categorie.getNom() }}" class="lien-categorie">
                        <div class="card shadow">
                            <img src="{{ asset('images/categories/') ~ categorie.image }}" class="card-img-top" alt="image {{ categorie.nom }}">
                            <div class="card-body">
                                <p class="nom-produit">{{ categorie.nom }}</p>
                            </div>
                        </div>
                    </a>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

