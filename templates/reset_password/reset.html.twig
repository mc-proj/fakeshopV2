{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe - Fake Shop V2{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/reset_password/request.style.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Réinitialisez votre mot de passe</h1>
        <div class="row">
            <div class="col-12">
                {{ form_start(resetForm) }}
                    {{ form_row(resetForm.plainPassword) }}
                    <button class="btn btn-primary" id="bouton_envoi">Réinitialisez votre mot de passe</button>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
{% endblock %}
