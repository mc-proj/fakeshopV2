{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe - Fake Shop V2{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/reset_password/request.style.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <h1>Réinitialisez votre mot de passe</h1>

        <div class="row">
            <div class="col-12">

                {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                    <div>
                        <small>
                            Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe
                        </small>
                    </div>

                    <button class="btn btn-primary" id="bouton_envoi">Réinitialiser mon mot de passe</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
{% endblock %}